<!-- views/series.ejs -->
<%- include('partials/header') %>

<h1 class="mb-4">Series Information</h1>

<% if (series.length === 0) { %>
  <div class="alert alert-info">No series available.</div>
<% } else { %>
  <div class="accordion" id="seriesAccordion">
    <% series.forEach((s, index) => { %>
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading<%= index %>">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                  data-bs-target="#collapse<%= index %>" aria-expanded="false" 
                  aria-controls="collapse<%= index %>">
            <%= s.name %>
          </button>
        </h2>
        <div id="collapse<%= index %>" class="accordion-collapse collapse" 
             aria-labelledby="heading<%= index %>" data-bs-parent="#seriesAccordion">
          <div class="accordion-body">
            <p><strong>Start Date:</strong> <%= s.startDate ? s.startDate.toDateString() : 'N/A' %></p>
            <p><strong>End Date:</strong> <%= s.endDate ? s.endDate.toDateString() : 'N/A' %></p>
            <p><strong>ODI Matches:</strong> <%= s.odi %></p>
            <p><strong>T20 Matches:</strong> <%= s.t20 %></p>
            <p><strong>Test Matches:</strong> <%= s.test %></p>
            <p><strong>Total Matches:</strong> <%= s.matches %></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>

<%- include('partials/footer') %>
