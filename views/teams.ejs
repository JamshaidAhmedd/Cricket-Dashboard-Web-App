<!-- views/teams.ejs -->
<%- include('partials/header') %>

<h1 class="mb-4">Teams from ICC Menâ€™s T20 World Cup Final</h1>

<% if (teams.length === 0) { %>
  <div class="alert alert-warning">No teams found.</div>
<% } else { %>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% teams.forEach(team => { %>
      <div class="col">
        <div class="card h-100">
          <% if (team.logo) { %>
            <img src="<%= team.logo %>" class="card-img-top" alt="<%= team.name %> Logo">
          <% } else { %>
            <img src="/images/default-team.png" class="card-img-top" alt="Default Team Logo">
          <% } %>
          <div class="card-body">
            <h5 class="card-title"><%= team.name %></h5>
            <p class="card-text">Country: <%= team.country %></p>
            <a href="/teams/<%= team._id %>" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>

<%- include('partials/footer') %>
